<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Spider_man">



    <ImageView
    android:id="@+id/spider_image"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:src="@drawable/batman"
    android:scaleType="centerCrop"
    tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/spidertext"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:background="@color/black"
        android:text="@string/spider"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"

        />

    <LinearLayout

        android:id="@+id/addbutton"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="150dp"
        android:background="#3d3d3d"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_add_24"
            app:tint="@color/white" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/minusButton"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="-30dp"
        android:background="#3d3d3d"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp">


        <ImageView
            android:layout_marginTop="-12dp"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_minimize_24"
            app:tint="@color/white" />

    </LinearLayout>


    <TextView
        android:id="@+id/textview"
        android:layout_marginTop="-45dp"
        android:layout_marginLeft="185dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview1"
        android:layout_marginTop="-90dp"
        android:layout_marginLeft="147dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select seat"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-170dp"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="10dp"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:src="@drawable/ic_baseline_event_seat_24"

        />

</LinearLayout>